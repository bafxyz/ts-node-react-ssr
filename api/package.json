        "@types/node": "^12.0.8",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^5.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "^2.4.1",
        "jest": "^24.8.0",
        "lint-staged": "^8.2.1",
        "nodemon": "^1.19.1",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "standard-version": "^6.0.1",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
